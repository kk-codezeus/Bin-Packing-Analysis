package binPacking;

import java.math.BigDecimal;
import java.util.*;

public class NextFit {
	List<Double> binSpaceRemaining;
	
	NextFit()
	{
		binSpaceRemaining = new ArrayList<Double> ();
	}
	
	void nextFit(Double size)
	{
		int noOfBins = binSpaceRemaining.size();
		if(noOfBins == 0 || binSpaceRemaining.get(noOfBins - 1) < size)
			binSpaceRemaining.add(Double.parseDouble(String.format("%.1f", 1.0 - size)));
		else
		{
			double remainingSpace = binSpaceRemaining.get(noOfBins - 1); 
			binSpaceRemaining.set(noOfBins - 1, Double.parseDouble(String.format("%.1f", remainingSpace - size)));
		}
	}
	
	void displayBins()
	{
		for(int i = 0;i < binSpaceRemaining.size();i++)
		{
			System.out.print(binSpaceRemaining.get(i).doubleValue());
			System.out.print(" ");
		}
		System.out.println();
	}
	
	public static void main(String[] args)
	{
		NextFit nf = new NextFit();
		Double[] itemSizes = new Double[] {.2, .5, .4, .7, .1, .3, .8};
		for(int i = 0;i < itemSizes.length;i++)
			nf.nextFit(itemSizes[i]);
		nf.displayBins();
	}
}
